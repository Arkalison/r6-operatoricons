{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "sourceMap": true,
        "declaration": true
    }
}
